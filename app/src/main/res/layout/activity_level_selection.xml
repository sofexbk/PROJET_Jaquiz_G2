<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/home_background"
android:padding="16dp">

<!-- Title -->
<TextView
    android:id="@+id/title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Choisir un niveau"
    android:textSize="32sp"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:shadowColor="#DDDDDD"
    android:shadowDx="2"
    android:shadowDy="2"
    android:shadowRadius="2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:fontFamily="sans-serif-medium" />

    <ImageView
        android:id="@+id/center_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/java_white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_text"
        android:layout_marginTop="50dp"
       />


<!-- Solo Play Card -->
<androidx.cardview.widget.CardView
    android:id="@+id/btnBeginner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_below="@id/center_image"
    android:layout_marginTop="40dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#4CAF50"
    app:cardCornerRadius="16dp"
    android:radius="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<!-- Multiplayer Card -->
<androidx.cardview.widget.CardView
    android:id="@+id/btnIntermediate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_below="@id/btnBeginner"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFC107"
    app:cardCornerRadius="16dp"
    android:radius="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/two"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<!-- Progression Card -->
<androidx.cardview.widget.CardView
    android:id="@+id/btnAdvanced"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_below="@id/btnIntermediate"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F44336"
    app:cardCornerRadius="16dp"
    android:radius="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/three"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>
