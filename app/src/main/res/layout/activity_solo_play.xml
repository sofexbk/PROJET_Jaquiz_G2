<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/home_background">

    <TextView
        android:id="@+id/title_solo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jeu Solo"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_practice_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/title_solo_play"
        android:layout_marginTop="40dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="16dp"
        android:radius="12dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:src="@drawable/ic_solo_play"-->
<!--                android:contentDescription="Solo Play Icon" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practice Mode"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_exam_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/card_practice_mode"
        android:layout_marginTop="40dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="16dp"
        android:radius="12dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:src="@drawable/ic_solo_play"-->
<!--                android:contentDescription="Solo Play Icon" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam Mode"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Button de retour -->
    <Button
        android:id="@+id/butnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:textColor="@android:color/white"
        android:background="@color/primary_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
