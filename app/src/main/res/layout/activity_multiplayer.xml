<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/home_background">

    <TextView
        android:id="@+id/title_multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multijoueur"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_2players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/title_multiplayer"
        android:layout_marginTop="40dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="16dp"
        android:radius="12dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Joueurs"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_3players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/card_2players"
        android:layout_marginTop="40dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="16dp"
        android:radius="12dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Joueurs"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_4players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/card_3players"
        android:layout_marginTop="40dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="16dp"
        android:radius="12dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Joueurs"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
